<Window x:Class="FlappyBirb_PánczélCsenge12E.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlappyBirb" MinWidth="480" MinHeight="320"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True" UseLayoutRounding="True">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#BDE8F5"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="18" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
    </Window.Resources>

    <Grid Background="Transparent">
        <Viewbox x:Name="jatekViewbox" Stretch="Uniform" StretchDirection="Both">
            <Canvas x:Name="canvas" Width="700" Height="500" Focusable="True" Background="LightBlue">
                <Label Name="scoreText"  FontFamily="Times New Roman" FontSize="20" Content="Score: " Canvas.Left="10" Canvas.Top="10"/>

                <Ellipse Name="flappyBird" Height="49.5" Width="78" Canvas.Left="40" Canvas.Top="196" Stroke="Transparent">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="kepek/flappyBird.png" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <Button x:Name="szintekButton" Content="Szintek" Height="92" Canvas.Left="235" Canvas.Top="82" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top" Click="szintekButton_Click" FontFamily="Times New Roman" FontSize="20"/>
                <Button x:Name="eredmenyekButton" Content="Eredmények" Height="92" Canvas.Left="240" Canvas.Top="283" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top" Click="eredmenyekButton_Click"  FontFamily="Times New Roman" FontSize="20"/>
                <Button x:Name="simaButton" Content="Sima" Height="92" Canvas.Left="235" Canvas.Top="82" Width="156" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"  FontFamily="Times New Roman" FontSize="20"/>
                <Button x:Name="esosButton" Content="Esős" Height="92" Canvas.Left="240" Canvas.Top="183" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top"  Visibility="Hidden"  FontFamily="Times New Roman" FontSize="20"/>
                <Button x:Name="kodosButton" Content="Ködös" Height="92" Canvas.Left="240" Canvas.Top="283" Width="156" HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Hidden"  FontFamily="Times New Roman" FontSize="20"/>
                <Button x:Name="VisszaMainButton" Content="Vissza" Height="44" Canvas.Left="256" Canvas.Top="33" Width="114" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Click="VisszaMainButton_Click"  FontFamily="Times New Roman" FontSize="20"/>
                <Button x:Name="VisszaAFőmenübe" Content="Vissza" Height="30" Canvas.Left="522" Canvas.Top="394" Width="68" HorizontalAlignment="Left" VerticalAlignment="Top" Click="VisszaAFőmenübe_Click" Visibility="Hidden"  FontFamily="Times New Roman" FontSize="20"/>
                <TextBlock x:Name="ScoreTextblock" Height="305" Canvas.Left="40" TextWrapping="Wrap" Text="Eddig elért eremények:" Canvas.Top="82" Width="516" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Visibility="Hidden"  FontFamily="Times New Roman"/>

            </Canvas>
        </Viewbox>
    </Grid>
</Window>
