<Window x:Class="FlappyBirb_PánczélCsenge12E.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="600">

    <Grid Background="Transparent">
        <Canvas x:Name="canvas" Focusable="True" Background="LightBlue">
            <Label Name="scoreText" FontSize="20" Content="Score: 0" />

            <Ellipse  Name="flappyBird" Height="66" Width="104" Canvas.Left="40" Canvas.Top="196" Stroke="Transparent">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="kepek/flappyBird.png" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse >

            <Button x:Name="szintekButton" Content="Szintek" Height="92" Canvas.Left="235" Canvas.Top="82" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top" Click="szintekButton_Click"/>
            <Button x:Name="eredmenyekButton" Content="Eredmények" Height="92" Canvas.Left="240" Canvas.Top="283" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="simaButton" Content="Sima" Height="92" Canvas.Left="235" Canvas.Top="82" Width="156" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"/>
            <Button x:Name="esosButton" Content="Esős" Height="92" Canvas.Left="240" Canvas.Top="183" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top"  Visibility="Hidden"/>
            <Button x:Name="kodosButton" Content="Ködös" Height="92" Canvas.Left="240" Canvas.Top="283" Width="156" HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Hidden"/>
            <Button x:Name="VisszaMainButton" Content="Vissza" Height="44" Canvas.Left="256" Canvas.Top="33" Width="114" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" />
        </Canvas>
    </Grid>
</Window>
